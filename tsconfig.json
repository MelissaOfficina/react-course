{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./src/",
    "sourceMap": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./types/*.d.ts"],
    "paths": {
      "app": ["src/app"],
      "app/*": ["src/app/*"],
      "pages": ["src/pages"],
      "pages/*": ["src/pages/*"],
      "shared": ["src/shared"],
      "shared/*": ["src/shared/*"],
    }
  },
  "include": ["src", "types"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
